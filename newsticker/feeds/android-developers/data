ay"))) (category ((term . "Input methods"))) (category ((term . "LiquidFun"))) (category ((term . "Maps"))) (category ((term . "Maps API"))) (category ((term . "MaterialDesign"))) (category ((term . "SDK Tools"))) (category ((term . "Text and Input"))) (category ((term . "WebView"))) (category ((term . "mobile vision APIs"))) (category ((term . "ubicomp"))) (category ((term . "Action Bar"))) (category ((term . "Android 2.1"))) (category ((term . "Android 2.2"))) (category ((term . "Android Developer Phone"))) (category ((term . "Animation and Graphics"))) (category ((term . "AppCompat"))) (category ((term . "Beta"))) (category ((term . "Boston"))) (category ((term . "Developer Console Store Listing Experiments"))) (category ((term . "Development Tools"))) (category ((term . "Efficient Apps"))) (category ((term . "Fragments"))) (category ((term . "GLSL"))) (category ((term . "Global"))) (category ((term . "Google Play for Work"))) (category ((term . "Google Wallet"))) (category ((term . "Google client API"))) (category ((term . "GoogleAPIClient"))) (category ((term . "Guidelines"))) (category ((term . "I/O2014"))) (category ((term . "IME"))) (category ((term . "JNI"))) (category ((term . "LVL"))) (category ((term . "London"))) (category ((term . "LondonEng"))) (category ((term . "Memory Management"))) (category ((term . "OpenGL"))) (category ((term . "Places"))) (category ((term . "PlayStore"))) (category ((term . "Profiling"))) (category ((term . "Pure"))) (category ((term . "TV"))) (category ((term . "Text-to-Speech"))) (category ((term . "Web"))) (category ((term . "Widgets"))) (category ((term . "apk"))) (category ((term . "beacons"))) (category ((term . "chrome"))) (category ((term . "developerstory"))) (category ((term . "google play for families"))) (category ((term . "io2010"))) (category ((term . "nearby"))) (category ((term . "signing"))) (category ((term . "user data"))) (category ((term . "watch face API"))) (category ((term . "wifi"))) (category ((term .